{
  "name": "text",
  "version": "1.0.0",
  "main": ".postcssrc.js",
  "config": {
    "port": 3000
  },
  "scripts": {
    "eslint": "eslint src/**/*.{js,vue}",
    "pretest": "npm run lint",
    "//cover:archive": "mkdir -p coverage_archive/$npm_package_version && cp -r coverage/* coverage_archive/$npm_package_version",
    "test": "cross-env NODE_ENV=test mocha src/",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "eslint *.js",
    "lint:css": "stylelint *.less",
    "lint:json": "jsonlint --quiet *.json",
    "lint:markdown": "markdownlint --config .markdownlint.json *.md",
    "mocha": "mocha tests/",
    "serial": "npm run eslint && npm run lint:js && npm run lint:css && npm run lint:json && npm run lint:markdown && mocha tests/",
    "parallel": "npm run lint:js & npm run lint:css & npm run lint:json & npm run lint:markdown & mocha tests/",
    "all": "npm-run-all eslint lint:* mocha",
    "fix": "npm run all -- --fix",
    "build": "webpack",
    "start": "webpack && webpack-dev-server --open --abc=222",
    "precover": "npm run cover:cleanup",
    "//cover": "nyc --reporter=html npm test",
    "cover:cleanup": "rimraf coverage && rm -rf .nyc_output",
    "postcover": "npm-run-all cover:archive --parallel cover:serve cover:open",
    "cover:archive": "cross-var \"mkdir -p coverage_archive/$npm_package_version && cp -r coverage/* coverage_archive/$npm_package_version\"",
    "//cover:serve": "cross-var http-server coverage_archive/$npm_package_version -p $npm_package_config_port",
    "//cover:open": "cross-var opn http://localhost:$npm_package_config_port",
    "//cover scripty": "scripty",
    "cover:serve": "scripty",
    "cover:open": "scripty",
    "cover": "node scripts/cover.js",
    "watch:test": "npm t -- --watch",
    "watch": "npm-run-all --parallel watch:*",
    "watch:lint": "onchange -i \"**/*.js\" \"**/*.less\" -- npm run lint",
    "client": "npm-run-all --parallel client:*",
    "client:reload-server": "livereload client/",
    "client:static-server": "http-server client/",
    "dummy": "echo $npm_package_name",
    "dumit": "echo $npm_package_config_port",
    "precommit": "npm run lint",
    "prepush": "npm run test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "chalk": "^2.4.2",
    "cpr": "^3.0.1",
    "cross-env": "^5.2.0",
    "cross-var": "^1.1.0",
    "eslint": "^5.13.0",
    "eslint-plugin-vue": "^5.1.0",
    "http-server": "^0.11.1",
    "husky": "^1.3.1",
    "jsonlint": "^1.6.3",
    "lint-staged": "^8.1.5",
    "livereload": "^0.7.0",
    "make-dir-cli": "^2.0.0",
    "markdownlint-cli": "^0.13.0",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "onchange": "^5.2.0",
    "opn-cli": "^4.0.0",
    "rimraf": "^2.6.3",
    "scripty": "^1.9.1",
    "shelljs": "^0.8.3",
    "stylelint": "^9.10.1",
    "webpack": "^4.29.4",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.1.14"
  }
}
